{% trans_default_domain 'translations' %}
    {%  extends '@!EshopSample/base-shop.html.twig' %}
    {% block content %}
        {% javascripts
            '@EshopSampleBundle/Resources/public/js/favs/favs-remove.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript">
            var messageCartUpdated = '{{ "WISH_LIST_CART_UPDATED_MSG"|trans }}';
            var wishlistRemove = '{{ url('wishlist_remove') }}'
        </script>
        <div id="loaded-data" class="uk-hidden uk-container uk-width-1-1 uk-padding-remove" uk-grid>
            <div class="uk-width-1-1  uk-margin-bottom">
                <h3>{{ "Wish list"|trans }}</h3>
                <hr>
                {% if data is empty %}
                    <div class="loader-data__not-found uk-text-center"><img src="{{ asset('bundles/EshopSample/img/sad-icon.png') }}" alt="{{ "CART_NOTHING_FOUND"|trans }}"> {{ "CART_NOTHING_FOUND"|trans }}</div>
                    <div>{{ "FAVS_NOTHING_FOUND"|trans }}</div>
                {% else %}
                    <div class="wishlist-wrap uk-child-width-1-4@l uk-child-width-1-3@s " uk-grid>
                        {% for key, item in data %}
                        <div id="row-{{ key }}">
                                <div class="wishlist-cart uk-position-relative uk-height-medium uk-card uk-card-default uk-card-body" >
                                    <span class="uk-width-1-1 uk-text-bold">
                                        <a id="name-{{ key }}" href="{{ url("cart_item_modal",{"id":key}) }}" target="_blank"  class=" uk-link uk-link-reset" uk-toggle>
                                            {{ item.productName }}
                                        </a>
                                    </span>
                                    <div class="checklist-content uk-flex uk-flex-middle uk-flex-wrap uk-flex-between uk-width-1-1 uk-position-relative">
                                        <div class="uk-flex uk-flex-wrap uk-flex-middle">
                                            <span class="uk-margin-small-right" >{{ item.price|round(2) }} {{ currency }}</span>
                                            <span id="item-multiply" class="qty-in-pack-{{key}} uk-display-block goods-qty uk-text-lowercase" data-pack="{{ item.multiply }}">{{ item.multiply }} {{ "CART_COUNT_PACK"|trans }}</span>
                                        </div>
                                    </div>
                                    <span data-remove-favs="{{ key }}" class="checklist__remove-btn remove uk-position-top-right" title="{{ "REMOVE"|trans }}"> <img src="{{ asset('bundles/eshopsample/img/remove-icon.svg') }}" uk-svg alt=""></span>
                                    <button data-product-id="{{ key }}"  class="cart-buy-btn uk-button ">{{ "ADD_TO_CART"|trans }}</button>
                                </div>
                                </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div id="cart-modal"  uk-modal >
                <div class="uk-modal-dialog uk-margin-auto-vertical uk-width-medium" uk-overflow-auto >
                    <div class="uk-modal-header">
                        <p class="checklist__modal-title uk-text-bold"></p>
                    </div>
                    <div class="uk-modal-body ">
                        <div class="number uk-flex uk-flex-middle uk-flex-center">
                            <span class="checklist__modal-btn uk-button minus-btn">-</span>
                            <input class=" checklist__modal-qty uk-input"  type="number" autofocus />
                            <span  class="checklist__modal-btn uk-button plus-btn">+</span>
                        </div>
                    </div>
                    <div class="uk-modal-footer uk-text-right">
                        <button class="uk-button uk-button-default uk-modal-close" type="button">{{ "Cancel"|trans }}</button>
                        <button class="uk-button checklist__modal-save-btn" type="button">{{ "Save"|trans }}</button>
                    </div>
                </div>
            </div>
            <div id="cart-modal-item" class="uk-flex-top" uk-modal>
                <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
                    <div id="loaded-modal-data" class="content">
                    </div>
                    <button class="uk-modal-close-default" type="button" uk-close></button>
                </div>
            </div>
        </div>
    {% endblock %}