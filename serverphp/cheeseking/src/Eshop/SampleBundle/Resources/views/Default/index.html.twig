{% trans_default_domain 'translations' %}
	{% extends '@!EshopSample/baseOther.html.twig' %}

	{% block content %}
        {% javascripts
            '@EshopSampleBundle/Resources/public/js/admin/clickimg.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <div id="loaded-data" class="uk-container uk-width-1-1 uk-padding-remove">
            <div class="slider uk-container uk-width-1-1">
                <div uk-slideshow="animation: push; autoplay: true">

                    <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
                        <ul class="uk-slideshow-items">
                            {% for itemSlider in listForSlider %}
                                <li>
                                    <img data-link="{{ path("news_item_read", {"id":itemSlider.getId}) }}" src="{{ asset ('bundles/eshopsample/files/'~itemSlider.getPhysicFileName~'?time='~rand) }}" alt="{{ itemSlider.getPhysicFileName }}" uk-cover>
                                </li>
                            {% endfor %}
                        </ul>

                        <a class="uk-position-center-left uk-position-small uk-hidden-hover uk-slidenav-large" href="#"
                           uk-slidenav-previous uk-slideshow-item="previous"></a>
                        <a class="uk-position-center-right uk-position-small uk-hidden-hover uk-slidenav-large" href="#" uk-slidenav-next
                           uk-slideshow-item="next"></a>

                    </div>

                    <ul class="uk-slideshow-nav uk-dotnav uk-flex-center uk-margin"></ul>

                </div>
            </div>
            <div class="uk-child-width-1-2 uk-child-width-1-3@s uk-flex-center uk-text-center uk-grid-small" uk-grid>
                {% for itemBottom in listForBottom %}
                    <a data-link="{{ path("news_item_read", {"id":itemBottom.getId}) }}" class="uk-margin-top" href="#" title="">
                        <img class="special-discout__cart"  src="{{ asset ('bundles/eshopsample/files/'~itemBottom.getPhysicFileName~'?rand='~rand) }}">
                    </a>
                {% endfor %}
            </div>
            <div class="uk-section">
                <h3 class="ch-about-as__text uk-heading-line uk-text-center"><span>{{ "ABOUT_US"|trans }}</span></h3>
                <p class="ch-about-as__text uk-text-justify uk-text-small">{{ "ABOUT_US_TEXT"|trans }}</p>
            </div>
            <div class="uk-margin-bottom">
                <div class="ch-simle-text uk-h3 uk-heading-line uk-text-center"><span>{{ "GALLERY"|trans }}</span></div>
                <div class="uk-child-width-1-3@m" uk-grid uk-lightbox="animation: slide">
                    {% for itemBottom in listForGallery %}
                        <div>
                            <a class="uk-margin-top" href="{{ asset ('bundles/eshopsample/files/'~itemBottom.getPhysicFileName) }}" title="">
                                <img class="special-discout__cart"  src="{{ asset ('bundles/eshopsample/files/'~itemBottom.getPhysicFileName~'?rand='~rand) }}">
                            </a>
                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    {% endblock %}
