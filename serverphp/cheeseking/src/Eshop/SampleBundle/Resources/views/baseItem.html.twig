                                    </div>
                                </div>
                            <div id="loader" class="uk-hidden uk-position-top-center uk-position-z-index">
                                <img  src="{{  asset('bundles/eshopsample/img/loader.gif') }}" />
                            </div>
                            <div id="loader-overlay" class="uk-hidden uk-overlay-default uk-position-cover">

                            </div>
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>

                    <div id="footer" class="adaptive-bg">
                    </div>
                    <a href="#menu-default" class="subnav-list-adaptive uk-position-center-left uk-position-fixed" uk-toggle>
                        <img class="subnav-list-adaptive__icon" src="{{ asset('bundles/EshopSample/img/menu-icon.png') }}">
