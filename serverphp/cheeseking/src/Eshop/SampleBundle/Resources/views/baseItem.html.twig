                                            {% if app.user %}
                                                <a href="#" class="uk-text-capitalize"><img class="header-nav__icon uk-margin-small-right" src="{{ asset('bundles/EshopSample/img/user-icon.png') }}">
                                                {{ app.user.name }} {{ app.user.surname }}</a>
                                                <div class="uk-navbar-dropdown">
                                                    <ul class="uk-nav uk-navbar-dropdown-nav">
                                                        <li><a href="{{ path("logout") }}">Выход</a></li>
                                                    </ul>
                                                </div>

                                            {% endif %}
